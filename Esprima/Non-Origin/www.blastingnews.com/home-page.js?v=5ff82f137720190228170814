$(document).ready(function(){$('#city li a').click(function(){var that=this;if(device=='Desktop'||device=='Tablet'){var ul_id=this.id.split('-');ul_id=ul_id[1];$('a[id^="local-"]').removeClass('active');$('.box-local-edition').removeClass('active');$('#'+this.id).addClass('active');$('#'+ul_id).addClass('active');}else{window.location.href=this_site_address_location+'/'+$(that).attr('data-slug')+'/';}});$(".link-figure").parent().on("click",function(){window.location.href=$(this).closest('li').find('.link-title').attr('href');});$('#support-2').css('width',Math.max($('#support-1').width(),$('#support-2').width()));var heroSwiper=new Swiper('.swiper-container',{slidesPerView:'auto',navigation:{nextEl:'.swiper-button-next',prevEl:'.swiper-button-prev'}});heroSwiper.on('reachBeginning',function(e){$('.swiper-slide.active').css('background','#2b3b4c');console.log('reachBeg');});heroSwiper.on('resize',function(e){if(!$('.swiper-button-prev').hasClass('swiper-button-disabled')){$('.swiper-slide.active').css('background','transparent');}});$('.swiper-button-prev').on('click',function(e){if(!$('.swiper-button-prev').hasClass('swiper-button-disabled')){$('.swiper-slide.active').css('background','transparent');}else{$('.swiper-slide.active').css('background','#2b3b4c');}});$('.swiper-button-next').on('click',function(e){if(!$('.swiper-button-prev').hasClass('swiper-button-disabled')){$('.swiper-slide.active').css('background','transparent');}else{$('.swiper-slide.active').css('background','#2b3b4c');}});});