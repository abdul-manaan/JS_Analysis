  function setmenu(lang){
    var ua=getua();
    switch(lang){
    case 'ja':
       if(ua=='iphone'){
         document.getElementById('fc2_apps_ios').style.display = 'block';
       }
       else if(ua=='android'){
         document.getElementById('fc2_apps_android').style.display = 'block';
       }
      break;
	  case 'en':
       if(ua=='iphone'){
         document.getElementById('apps_video').style.display = 'none';
		 document.getElementById('apps_video_link').style.display = 'none';
       }
      break;
	  case 'cn':
       if(ua=='iphone'){
         document.getElementById('apps_video').style.display = 'none';
		 document.getElementById('apps_video_link').style.display = 'none';
	  }
      break;
	  case 'tw':
       if(ua=='iphone'){
         document.getElementById('apps_video').style.display = 'none';
		 document.getElementById('apps_video_link').style.display = 'none';
	   }
      break;
	  case 'ko':
       if(ua=='iphone'){
         document.getElementById('apps_video').style.display = 'none';
		 document.getElementById('apps_video_link').style.display = 'none';
	   }
      break;
	  case 'de':
       if(ua=='iphone'){
         document.getElementById('apps_video').style.display = 'none';
		 document.getElementById('apps_video_link').style.display = 'none';
	   }
      break;
	  case 'es':
       if(ua=='iphone'){
         document.getElementById('apps_video').style.display = 'none';
		 document.getElementById('apps_video_link').style.display = 'none';
	  }
      break;
	  case 'fr':
       if(ua=='iphone'){
         document.getElementById('apps_video').style.display = 'none';
		 document.getElementById('apps_video_link').style.display = 'none';
	  }
      break;
      case 'pt':
       if(ua=='iphone'){
         document.getElementById('apps_video').style.display = 'none';
		 document.getElementById('apps_video_link').style.display = 'none';
	  }else if(ua=='android'){
         document.getElementById('apps_video').style.display = 'none';
		 document.getElementById('apps_video_link').style.display = 'none';
	   }
      break;
    }
  }

  function getua(){
	if (navigator.userAgent.indexOf('iPhone') != -1 || navigator.userAgent.indexOf('iPod') != -1) {
		return 'iphone';
	}else if (navigator.userAgent.indexOf('Android') != -1) {
		return 'android';
	}
  }


