    
    function DisplayLogin(){
	  var hostname = location.hostname;
      var tail = Math.floor( Math.random() * 10000000 );
      var url  = "http://" + hostname + "/logincheck.php?" + tail;
      $.get(url, function(data){
        if(data!='true'){
			elem = document.getElementById('top_sign_up');
			elem.style.display = "block";
			elem = document.getElementById('top_login');
			elem.style.display = "block";
			elem = document.getElementById('footer_sign_up');
			elem.style.display = "block";
        }
		if(data=='true'){
			elem = document.getElementById('top_dashbord');
			elem.style.display = "block";
        }
      });
    }
    
    
    function getElementsByClassNameOrg(targetClass){
      var foundElements = new Array();
      
      if (typeof(document.getElementsByClassNam) == 'function') {
        elements = document.getElementsByClassName(targetClass);
        if(elements.length>0){
          return elements;
        }
      }
      
      if(document.all){
        var allElements = document.all;
      }else{
        var allElements = document.getElementsByTagName("*");
      }
      for(i=0,j=0;i<allElements.length;i++){
        if(allElements[i].className == targetClass){
          foundElements[j] = allElements[i];
          j++;
        }
      }
      return foundElements; 
    }
