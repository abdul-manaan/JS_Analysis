$(function () {
	$('.service_list dl dt a').click(function (){
		var currentId = $(this).attr('href');
		var description = $('.service_description');
		var flag = false;

		for(var i=0; i<description.length; i++){
			if(description.eq(i).css("display") == "list-item"){
				flag = true;
				description.eq(i).slideUp("fast", function(){
					if($(this).data('role') != currentId){
						$(currentId).slideDown("fast");
					}
				});
			}
		}

		if(!flag){
			$(currentId).slideDown("normal");
		}
		return false;
	});
});
